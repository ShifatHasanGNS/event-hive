{
  "name": "event_hive",
  "version": "1.0.0",
  "description": "AI-assisted event database explorer with natural language querying",
  "main": "src/index.js",
  "scripts": {
    "dev": "bunx concurrently \"bunx tailwindcss -i src/styles/tailwind.css -o public/styles.css --watch\" \"bun --watch src/index.js\"",
    "dev:server": "bun --watch src/index.js",
    "tailwind:build": "bunx tailwindcss -i src/styles/tailwind.css -o public/styles.css --minify",
    "tailwind:watch": "bunx tailwindcss -i src/styles/tailwind.css -o public/styles.css --watch",
    "build": "bun run tailwind:build",
    "start": "bun src/index.js",
    "lint": "bunx eslint \"src/**/*.js\" \"public/**/*.js\" \"api/**/*.js\"",
    "cleanup": "rm -rf node_modules bun.lock"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@neondatabase/serverless": "1.0.2",
    "cors": "^2.8.5",
    "dotenv": "17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "serverless-http": "4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.36.0",
    "globals": "16.4.0",
    "postcss": "^8.4.49",
    "tailwindcss": "4.1.16"
  }
}
